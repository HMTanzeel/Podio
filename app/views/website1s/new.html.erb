<%= form_with model: @website1 do |form| %>
  <div class= "form-group col-md-4">
    <%= form.label :web_name %>
    <%= form.text_field :web_name , class:"form-control" %>
    <% @article.errors.full_messages_for(:web_name).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div class= "form-group col-md-4">
    <%= form.label :url %>
    <%= form.text_area :url, class: "form-control" %>
    <% @article.errors.full_messages_for(:url).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div><br>

  <div class="form-group col-md-4">
    <%= form.label :status %>
    <%= form.select(:status, status_options,{include_blank: "please select a status"}, {class: "form-control"} ) %>
  </div><br>

  <div class="form-group col-md-4">
    <%= form.label :email %>
    <%= form.file_field :email, class: "form-control" %>
    <% @article.errors.full_messages_for(:email).each do |message| %>
    <div><%= message %></div>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :phone %>
    <%= form.file_field :phone, class: "form-control" %>
    <% @article.errors.full_messages_for(:phone).each do |message| %>
    <div><%= message %></div>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :location %>
    <%= form.file_field :location, class: "form-control" %>
    <% @article.errors.full_messages_for(:location).each do |message| %>
    <div><%= message %></div>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :hosting %>
    <%= form.file_field :hosting, class: "form-control" %>
    <% @article.errors.full_messages_for(:hosting).each do |message| %>
    <div><%= message %></div>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :domain %>
    <%= form.file_field :domain, class: "form-control" %>
    <% @article.errors.full_messages_for(:domain).each do |message| %>
    <div><%= message %></div>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :server %>
    <%= form.file_field :server, class: "form-control" %>
    <% @article.errors.full_messages_for(:server).each do |message| %>
    <div><%= message %></div>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>